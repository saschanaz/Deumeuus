{
  "compilerOptions": {
    "strict": true,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "js/",
    "mapRoot": "js/",
    "sourceRoot": "sources/",
    "emitBOM": true,
    "module": "amd", // remove this line when no need to support Edge 15 mobile
    "baseUrl": ".",
    "paths": {
      "node_modules/localforage/dist/*": [ "localforage" ]
    }
  },
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
