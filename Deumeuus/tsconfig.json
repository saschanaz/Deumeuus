{
  "compilerOptions": {
    "strict": true,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "js/",
    "mapRoot": "js/",
    "sourceRoot": "sources/",
    "emitBOM": true,
    "module": "commonjs" // remove this line when no need to support Edge 15 mobile
  },
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}
